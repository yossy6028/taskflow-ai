{
  "name": "taskflow-ai",
  "version": "1.0.0",
  "description": "AI-powered task management and Gantt chart generation app",
  "main": "dist/main/main/index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:main\" \"npm run dev:renderer\" \"wait-on http://localhost:4000 && electron .\"",
    "dev:main": "tsc -w -p tsconfig.main.json",
    "dev:renderer": "vite",
    "build": "npm run build:main && npm run build:renderer && npm run build:electron",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "vite build",
    "build:electron": "electron-builder",
    "start": "electron .",
    "test": "jest",
    "lint": "eslint . --ext .ts,.tsx",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,css}\""
  },
  "keywords": [
    "task-management",
    "gantt-chart",
    "ai",
    "gemini",
    "electron"
  ],
  "author": "Yoshii Katsuhiko",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/better-sqlite3": "^7.6.13",
    "@types/jest": "^30.0.0",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^24.2.0",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vitejs/plugin-react": "^4.7.0",
    "concurrently": "^9.2.0",
    "electron": "^37.2.5",
    "electron-builder": "^26.0.12",
    "eslint": "^9.32.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "jest": "^30.0.5",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.1",
    "typescript": "^5.9.2",
    "vite": "^7.0.6",
    "wait-on": "^8.0.4"
  },
  "dependencies": {
    "@fullcalendar/daygrid": "^6.1.18",
    "@fullcalendar/google-calendar": "^6.1.18",
    "@fullcalendar/react": "^6.1.18",
    "@fullcalendar/timegrid": "^6.1.18",
    "@google/generative-ai": "^0.24.1",
    "@reduxjs/toolkit": "^2.8.2",
    "@tailwindcss/forms": "^0.5.10",
    "@types/d3": "^7.4.3",
    "@types/dompurify": "^3.0.5",
    "@types/gapi": "^0.0.47",
    "better-sqlite3": "^12.2.0",
    "d3": "^7.9.0",
    "date-fns": "^4.1.0",
    "dompurify": "^3.2.6",
    "dotenv": "^17.2.1",
    "firebase": "^12.1.0",
    "framer-motion": "^12.23.12",
    "frappe-gantt-react": "^0.2.2",
    "gantt-elastic": "^1.0.12",
    "googleapis": "^155.0.0",
    "jsdom": "^26.1.0",
    "lucide-react": "^0.536.0",
    "openai": "^5.12.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-redux": "^9.2.0",
    "tailwindcss": "^3.4.13",
    "vibelogger": "^0.1.0"
  },
  "build": {
    "appId": "com.taskflow.ai",
    "productName": "taskflow-ai",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/main/**/*",
      "dist/renderer/**/*",
      "package.json",
      "node_modules/**/*"
    ],
    "asar": true,
    "mac": {
      "target": "default",
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
